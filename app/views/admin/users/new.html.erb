<% if @user.errors.any? %> 

    <div class="alert alert-danger ">
        <ul>
            <%  @user.errors.full_messages.each do |message| %>
                <% if message.include?("名前")%>
                    <% message = "名前を入力してください" %>
                <% end %>
                <% if message.include?("Passwordを入力してください")%>
                    <% message = "パスワードを入力してください" %>
                <% end %>
                <% if message.include?("Emailは不正な値です")%>
                    <% message = "メールアドレスを入力してください" %>
                <% end %>
                <% if message.include?("Password digestは6文字以上で入力してください")%>
                    <% message = "パスワードは6文字以上で入力してください" %>
                <% end %>
                <% if message.include?("Emailはすでに存在します")%>
                    <% message = "メールアドレスはすでに使われています" %>
                <% end %>

                <% if message.include?("Password confirmationとPasswordの入力が一致しません")%>
                    <% message = "パスワード（確認）とパスワードの入力が一致しません" %>
                <% end %>
                <li><%= message%></li>
            <%end%>
        </ul>
    </div>

<% end%>
