</br></br>

<div class="card ">
    <% if @task.errors.any? %>
        <div class="btn btn-danger" id="error_explanation"> 

            <ul>
                <% if @task.errors.full_messages.length == 1 %>
                <% if @task.errors.full_messages.include?('タイトルを入力してください') == true %>
                    <li><%= t("message.validate.title") %></li>
                <% else %>
                    <li><%= t("message.validate.content") %></li>
                <% end %>
                <% else %>
                <li><%= @task.errors.full_messages.join(', ') %> </li>
                <% end %>
            </ul>
        </div>
    <% end %>

    
  <div class="card-header">   
  <h1><%= t("newTask.el.titlePage") %></h1>
  </div>
  
  <div class="card-body">
        <div class="form-group">
            <%= form_for @task do |f| %>
                <%= f.label :title , class: "control-label"%>
                <div class="">
                    <%= f.text_field :title, class: "form-control " %>
                </div>
                <%= f.label :content, class: " control-label"%>
                <div class="">
                    <%= f.text_field :content, class: "form-control " %>
                </div>
                </br>
                <div>
                    <button type="submit" class="btn btn-success" id="create-task"><%= t("activerecord.attributes.task.create") %> </button></br>
                    <a class="btn btn-link " href="<%= tasks_path %>" id="back"><%= t("activerecord.attributes.task.back") %></a>
                </div>
            <% end %>
        
        </div>
    </div>
    
    
   
</div>