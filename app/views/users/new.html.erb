<%content_for(:title,"アカウント登録ページ") %>
<% if @user.errors.any? %> 

    <div class="alert alert-danger ">
        <ul>
            <%  @user.errors.full_messages.each do |message| %>
            
                <li><%= message%></li>
            <%end%>
        </ul>
    </div>

<% end%>
<h1>アカウント登録ページ</h1>
<div class="row ">

    <div class="col-md-8 panel-body">
        <div class="form-group">
            <%= form_for @user, html: {class: 'form-horizontal'} do |f| %>

                <%= f.label :"名前" , class: "col-md-4 control-label"%>
                <div class="col-md-8">
                    <%= f.text_field :name, class: "form-control " %>
                </div>

                <%= f.label :"メールアドレス" , class: "col-md-4 control-label"%>
                <div class="col-md-8">
                    <%= f.email_field :email, class: "form-control " %>
                </div>

                <%= f.label :"パスワード" , class: "col-md-4 control-label"%>
                <div class="col-md-8">
                    <%= f.password_field :password_digest, class: "form-control " %>
                </div>

                <%= f.label "パスワード（確認)" , class: "col-md-4 control-label"%>
                <div class="col-md-8">
                    <%= f.password_field :password_confirmation, class: "form-control " %>
                </div>
                </br>
                <div class="form-group col-md-8  align-items-center">
                    <button type="submit"  id="create-user" class="create-user btn btn-primary ">登録する</button>
                </div>
            
            <% end %>
        </div>
    </div>
    <div class="col-4 form-group ">
    </div>
</div>

